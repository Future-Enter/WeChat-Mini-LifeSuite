/* pages/weather/weather.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 30rpx;
}

.search-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.search-inputs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.input-item {
  flex: 1;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 12rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.search-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(102, 126, 234, 0.3);
}

.btn-text {
  color: white;
}

.btn-icon {
  font-size: 32rpx;
}

/* 天气卡片 */
.weather-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.location-info {
  flex: 1;
}

.city-name {
  display: block;
  font-size: 46rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 8rpx;
}

.weather-desc {
  font-size: 28rpx;
  color: #718096;
}

.update-time {
  font-size: 24rpx;
  color: #a0aec0;
}

/* 7天预报 */
.forecast-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.section-subtitle {
  font-size: 24rpx;
  color: #a0aec0;
}

.forecast-scroll-container {
  width: 100%;
}

.forecast-scroll-view {
  width: 100%;
  white-space: nowrap;
}

.forecast-horizontal-list {
  display: inline-flex;
  gap: 20rpx;
}

.forecast-card {
  display: inline-flex;
  flex-direction: column;
  min-width: 200rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.forecast-card.today {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.forecast-card.tomorrow {
  background: #edf2f7;
}

.forecast-header {
  text-align: center;
  margin-bottom: 15rpx;
  position: relative;
}

.day-week {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 5rpx;
}

.day-date {
  font-size: 22rpx;
  opacity: 0.7;
}

.today-indicator {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff6b6b;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.template-container {
  width: 100%;
}

/* 状态样式 */
.loading-state {
  text-align: center;
  padding: 100rpx 0;
  color: white;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: white;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 天气模板通用样式 */
.weather-template {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.template-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
}

.template-icon {
  width: 60rpx;
  height: 60rpx;
}

.template-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.weather-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #2d3748;
}

.temp-range {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.temp-max {
  font-size: 28rpx;
  font-weight: 700;
}

.temp-separator {
  font-size: 20rpx;
  color: #a0aec0;
}

.temp-min {
  font-size: 28rpx;
  font-weight: 600;
}

.weather-details-mini {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
  align-items: flex-end;
}

.detail-mini {
  font-size: 20rpx;
  color: #718096;
}

/* 当前天气模板样式 */
.current-weather-content {
  width: 100%;
}

.horizion-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0;
}

.temperature-section {
  text-align: left;
}

.temperature {
  font-size: 80rpx;
  font-weight: 300;
  color: #2d3748;
  line-height: 1;
}

.feels-like {
  display: block;
  font-size: 24rpx;
  color: #718096;
  margin-top: 5rpx;
}

.weather-icon-large {
  flex: 1;
  text-align: right;
}

.weather-icon-large image {
  width: 100rpx;
  height: 100rpx;
}

.weather-details-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.detail-icon {
  font-size: 28rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #718096;
  min-width: 70rpx;
}

.detail-value {
  font-size: 22rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 不同天气类型的特殊样式 */
.sunny-template .temp-max {
  color: #d69e2e;
}

.cloudy-template .weather-text {
  color: #4a5568;
}

.rainy-template {
  background: linear-gradient(135deg, rgba(66, 153, 225, 0.05) 0%, rgba(102, 126, 234, 0.05) 100%);
  border-radius: 12rpx;
  padding: 15rpx;
  margin: 5rpx -5rpx;
}

.snowy-template {
  background: linear-gradient(135deg, rgba(237, 242, 247, 0.8) 0%, rgba(203, 213, 224, 0.8) 100%);
  border-radius: 12rpx;
  padding: 15rpx;
  margin: 5rpx -5rpx;
}

.foggy-template {
  background: linear-gradient(135deg, rgba(160, 174, 192, 0.1) 0%, rgba(113, 128, 150, 0.1) 100%);
  border-radius: 12rpx;
  padding: 15rpx;
  margin: 5rpx -5rpx;
}

/* 今日天气的特殊样式 */
.forecast-card.today .weather-template {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 15rpx;
  margin: 5rpx -5rpx;
}

.forecast-card.today .weather-text,
.forecast-card.today .temp-max,
.forecast-card.today .temp-min,
.forecast-card.today .detail-mini {
  color: white;
  font-weight: 600;
}

/* 滑动指示器 */
.scroll-indicator {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  margin-top: 20rpx;
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #e2e8f0;
}

.indicator-dot.active {
  background: #667eea;
}
