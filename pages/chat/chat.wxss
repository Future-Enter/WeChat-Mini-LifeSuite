/* pages/chat/chat.wxss */

/* 页面整体样式 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eaeaea;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

.clear-btn {
  color: #7f8c8d;
  font-size: 26rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  background-color: transparent;
}

.clear-btn-hover {
  background-color: #f5f5f5;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 30rpx 30rpx 0;
  background-color: #f8f9fa;
}

.message-wrapper {
  padding-bottom: 30rpx;
}

/* 消息行 */
.message-row {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.ai-message {
  justify-content: flex-start;
}

.user-message {
  justify-content: flex-end;
}

/* 消息气泡 */
.message-bubble {
  max-width: 70%;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  position: relative;
  word-break: break-word;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  line-height: 1.6;
}

.ai-bubble {
  background-color: #ffffff;
  border-top-left-radius: 8rpx;
  margin-left: 15rpx;
}

.user-bubble {
  background-color: #3498db;
  border-top-right-radius: 8rpx;
  margin-right: 15rpx;
}

/* 消息内容 */
.message-content {
  font-size: 30rpx;
  color: #333333;
  display: block;
}

.user-bubble .message-content {
  color: #ffffff;
}

/* 消息底部 */
.message-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  font-size: 24rpx;
}

.message-time {
  color: #95a5a6;
}

.user-bubble .message-time {
  color: rgba(255, 255, 255, 0.85);
}

.message-role {
  color: #7f8c8d;
  margin-left: 15rpx;
}

.user-bubble .message-role {
  color: rgba(255, 255, 255, 0.85);
  margin-left: 0;
  margin-right: 15rpx;
}

/* 复制按钮 */
.message-actions {
  display: flex;
  align-items: center;
  opacity: 0;
  transition: opacity 0.2s;
}

.message-row:hover .message-actions {
  opacity: 1;
}

.copy-btn {
  color: #7f8c8d;
  font-size: 24rpx;
  background-color: transparent;
  border: none;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
}

.copy-btn::after {
  border: none;
}

/* 加载指示器 */
.loading-indicator {
  display: flex;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #7f8c8d;
}

.loading-dots {
  display: flex;
  margin-left: 10rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #95a5a6;
  margin: 0 4rpx;
  animation: dotPulse 1.4s infinite;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes dotPulse {
  0%, 60%, 100% {
    opacity: 0.4;
    transform: scale(0.8);
  }
  30% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #eaeaea;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 25rpx;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  color: #333333;
  margin-right: 25rpx;
  border: 1rpx solid #e0e0e0;
}

.input:disabled {
  background-color: #f9f9f9;
  color: #bdc3c7;
}

/* 发送按钮 */
.send-btn {
  width: 90rpx !important;
  height: 90rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3498db;
  padding: 0;
  box-shadow: 0 4rpx 15rpx rgba(52, 152, 219, 0.3);
  transition: all 0.2s;
}

.send-btn::after {
  border: none;
}

.send-btn-disabled {
  background-color: #bdc3c7 !important;
  box-shadow: none !important;
  opacity: 0.6;
}

.send-btn:active:not(.send-btn-disabled) {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(52, 152, 219, 0.3);
}

.send-icon {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 500;
  margin-left: 3rpx;
}

/* 滚动锚点 */
#bottom-anchor {
  height: 1rpx;
  visibility: hidden;
}