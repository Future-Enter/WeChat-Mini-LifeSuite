/* 全局样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 标题区域 */
.header {
  padding: 40rpx 20rpx 20rpx;
  text-align: center;
}

.main-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #2d3436;
  display: block;
  margin-bottom: 10rpx;
}

.sub-title {
  font-size: 24rpx;
  color: #636e72;
  font-weight: 400;
  display: block;
}

/* 待办事项列表 */
.todo-list {
  margin-top: auto;
  width: 90vw;
}

/* 待办卡片 */
.todo-card {
  position: relative;
  overflow: hidden;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background: #ffffff;
  touch-action: pan-y;
  -webkit-user-select: none;
  user-select: none;
}

/* 滑动背景区域 */
.slide-bg {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 1;
}

.slide-bg.complete-bg {
  left: 0;
  background: linear-gradient(to right, #00b894, #00a085);
  transform: translateX(-100%);
}

.slide-bg.delete-bg {
  right: 0;
  background: linear-gradient(to left, #ff3b30, #ff6b6b);
  transform: translateX(100%);
}

.slide-bg.show {
  opacity: 1;
  transform: translateX(0);
}

.slide-icon {
  font-size: 48rpx;
  color: white;
  margin-bottom: 10rpx;
}

.slide-text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 卡片内容 */
.card-content {
  position: relative;
  display: flex;
  align-items: center;
  height: 100%;
  background: #fffef0;
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f5e6ca;
  transition: transform 0.2s ease-out;
  z-index: 2;
  box-sizing: border-box;
}

/* 滑动动画类 */
.card-content.slide-left {
  transform: translateX(-200rpx) !important;
  transition: transform 0.3s ease;
}

.card-content.slide-right {
  transform: translateX(200rpx) !important;
  transition: transform 0.3s ease;
}

.card-content.slide-back {
  transform: translateX(0) !important;
  transition: transform 0.3s ease;
}

/* 复选框区域 */
.checkbox-container {
  margin-right: 20rpx;
}

.custom-checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #d3d0a4;
  transition: all 0.3s ease;
}

.custom-checkbox.checked {
  background-color: #00b894;
  border-color: #00b894;
}

.checkmark {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 文本区域 */
.text-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-right: 20rpx;
}

.todo-number {
  font-size: 24rpx;
  color: #0984e3;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.todo-text {
  font-size: 32rpx;
  color: #2d3436;
  font-weight: 500;
  line-height: 1.4;
  word-break: break-word;
}

.todo-text.completed-text {
  text-decoration: line-through;
  color: #999;
}

/* 状态指示器 */
.status-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.status-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.status-dot.completed-dot {
  background-color: #00b894;
  box-shadow: 0 0 10rpx rgba(0, 184, 148, 0.5);
}

.status-dot.pending-dot {
  background-color: #fd79a8;
  box-shadow: 0 0 10rpx rgba(253, 121, 168, 0.5);
}

.status-text {
  font-size: 20rpx;
  color: #636e72;
  white-space: nowrap;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.action-btn.complete-btn {
  background-color: #00b894;
  color: white;
}

.action-btn.delete-btn {
  background-color: #ff3b30;
  color: white;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 装饰性线条 */
.card-bottom-line {
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 2rpx;
  background: linear-gradient(to right, transparent, #0984e3, transparent);
  opacity: 0.3;
}

/* 空状态提示 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

/* 添加新待办按钮 */
.add-todo-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(116, 185, 255, 0.4);
  font-weight: 600;
  z-index: 100;
  transition: all 0.3s ease;
}

.add-todo-btn:active {
  transform: translateX(-50%) scale(0.95);
  box-shadow: 0 5rpx 20rpx rgba(116, 185, 255, 0.3);
}

.add-icon {
  font-size: 36rpx;
  font-weight: 300;
  margin-right: 10rpx;
}

.add-text {
  font-size: 28rpx;
}

.header-minimal {
  width: 90vw;
  padding: 40rpx 30rpx 30rpx;
  background: rgb(255, 255, 255);
  position: relative;
}

.header-notepad {
  background: #fffef0;
  border-radius: 0 0 20rpx 20rpx;
  padding: 40rpx 30rpx 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  border: 2rpx solid #f5e6ca;
  border-top: none;
  overflow: hidden;
  width: 85vw;
}

/* 列表纸线条 */
.notepad-lines {
  position: absolute;
  top: 100rpx;
  left: 40rpx;
  right: 40rpx;
  bottom: 30rpx;
  pointer-events: none;
}

.notepad-lines .line {
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(245, 230, 202, 0.8) 20%, 
    rgba(245, 230, 202, 0.8) 80%, 
    transparent 100%
  );
  margin-bottom: 30rpx;
}

.notepad-lines .line:nth-child(1) { margin-top: 0; }
.notepad-lines .line:nth-child(2) { margin-top: 30rpx; }
.notepad-lines .line:nth-child(3) { margin-top: 60rpx; }
.notepad-lines .line:nth-child(4) { margin-top: 90rpx; }

/* 打孔效果 */
.hole {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #fffef0;
  border: 2rpx solid #f5e6ca;
  border-radius: 50%;
  top: 20rpx;
}

.hole.left {
  left: 20rpx;
}

.hole.right {
  right: 20rpx;
}

/* 标题内容 */
.title-notepad {
  position: relative;
  z-index: 1;
}

.main-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #5c4b37;
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  font-family: 'Courier New', monospace;
  text-shadow: 2rpx 2rpx 0 rgba(245, 230, 202, 0.5);
}

/* 副标题行 */
.sub-title-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.dash-line {
  flex: 1;
  height: 1rpx;
  background: repeating-linear-gradient(
    90deg,
    transparent,
    transparent 10rpx,
    #d4b483 10rpx,
    #d4b483 20rpx
  );
  margin: 0 20rpx;
}

.sub-title {
  font-size: 24rpx;
  color: #8b7355;
  font-weight: 500;
  white-space: nowrap;
  font-style: italic;
}

/* 完成统计 */
.completion-stats {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #f5e6ca;
  backdrop-filter: blur(10rpx);
}

.stat-circle {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.circle-progress {
  width: 100%;
  height: 100%;
  border: 8rpx solid #f0f0f0;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 100%;
  background: linear-gradient(135deg, #00b894, #0984e3);
  transform-origin: left center;
  transition: transform 0.5s ease;
}

.percentage {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  font-weight: 700;
  color: #5c4b37;
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-desc {
  font-size: 20rpx;
  color: #8b7355;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.stat-detail {
  font-size: 24rpx;
  font-weight: 600;
  color: #5c4b37;
}