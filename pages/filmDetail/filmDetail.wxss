/* filmDetail.wxss */
.detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部背景 */
.header-bg {
  height: 700rpx;
  position: relative;
}

.bg-image {
  width: 100%;
  height: 100%;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.6));
}

/* 电影头部信息 */
.film-header {
  display: flex;
  padding: 30rpx;
  margin-top: -500rpx;
  position: relative;
  z-index: 1;
}

.detail-poster {
  width: 240rpx;
  height: 330rpx;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.3);
}

.film-info {
  flex: 1;
  margin-left: 30rpx;
  color: #fff;
}

.film-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.original-title {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 30rpx;
}

.rating-section {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.rating-score {
  display: flex;
  align-items: baseline;
  margin-bottom: 15rpx;
}

.score {
  font-size: 56rpx;
  font-weight: bold;
}

.full-score {
  font-size: 28rpx;
  opacity: 0.8;
}

.rating-stars {
  font-size: 32rpx;
  color: #ffac2d;
  margin-bottom: 10rpx;
}

.rating-count {
  font-size: 24rpx;
  opacity: 0.9;
}

.meta-info {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.meta-info view {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 30rpx;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

/* 演职人员 */
.cast-list {
  display: flex;
  white-space: nowrap;
}

.cast-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  width: 140rpx;
}

.cast-avatar {
  width: 140rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.cast-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 5rpx;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cast-role {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 剧情简介 */
.summary-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.expand-btn {
  color: #007aff;
  margin-left: 20rpx;
}

/* 剧照 */
.photos-list {
  display: flex;
  white-space: nowrap;
}

.photo-item {
  width: 300rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

/* 基本信息 */
.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 180rpx;
  font-size: 26rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

/* 加载提示 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}
/* filmDetail.wxss - 修复简介样式 */

/* 剧情简介 */
.summary-content {
  position: relative;
}

.summary-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 收起状态：显示4行 */
.summary-text.collapsed {
  max-height: 180rpx;
  overflow: hidden;
  position: relative;
}

/* 展开状态：显示全部 */
.summary-text.expanded {
  max-height: none;
}

/* 收起状态时的渐变遮罩 */
.summary-text.collapsed::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1));
}

/* 展开收起按钮 */
.expand-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 15rpx 0;
  color: #007aff;
  font-size: 26rpx;
}

.expand-icon {
  margin-left: 10rpx;
  font-size: 20rpx;
}
/* 星级评分样式 */
.rating-stars {
  display: flex;
  align-items: center;
  margin: 15rpx 0;
}

.star {
  font-size: 32rpx;
  margin-right: 6rpx;
  color: #ddd; /* 默认灰色 */
  position: relative;
}

/* 实心星的样式 */
.star[class*="filled"] {
  color: #ffac2d;
}